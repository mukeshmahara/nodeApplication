        <table class="table table-hover">
            <thead>
                <tr>
                    <th  scope="col">S.N</th>
                    <th scope="col">
                        Goal List
                    </th>         
                    <th scope="col">Delete option</th>   
                </tr>
            </thead>
            <tbody>
                <tr> 
                    <th scope="row">1</th> 
                    
                    <td><% goals.map(function(goal){%>
                        <%=goal.title %> <br><br>
                        <% }) %>    
                    </td> 

                    <td><% goals.map(function(goal){%>
                        <form action="/form/<%=goal._id%>?_method=DELETE" method="POST" >
                            <button type="submit" onclick="return confirmDelete()" class="btn btn-danger">Delete</button><br>
                        </form>
                        <% }) %> 
                    </td>
                     
                </tr>
                <br>
            </tbody>
        </table>

        <script>
        function confirmDelete(){
            return confirm("Are you Sure?");
            alert(console.log("ok"));
